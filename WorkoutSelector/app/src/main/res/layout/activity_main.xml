<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/topimage_imageview"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitCenter"
        android:src="@drawable/equipmentexercise"/>

    <TextView
        android:id="@+id/apptitle_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Workout Selector"
        android:textColor="#E30518"
        android:textSize="32sp"/>

    <EditText
        android:id="@+id/addexercise_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Add New Exercise"/>

    <Button
        android:id="@+id/addexercise_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#131001"
        android:textColor="#1BE105"
        android:text="Add New Exercise Here!"/>

    <Button
        android:id="@+id/chosen_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:backgroundTint="#95F328"
        android:text="Random Exercise!!!"
        android:textColor="#0543E1"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/chosenexercise_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="LETS GO!!!!!!!"
        android:textColorHint="#2196F3"
        android:textColor="#8BC34A"
        android:textSize="32sp"/>

</LinearLayout>